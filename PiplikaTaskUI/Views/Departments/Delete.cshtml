@model PiplikaTaskUI.Models.DTO.DepartmentDTO

@{
    ViewData["Title"] = "Create";
}



<h4 class="alert alert-warning text-center"> Delete Department</h4>
<hr />
@if (Model is not null)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Delete" asp-controller="Departments" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DepartmentId">
                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label"></label>
                    <input type="text" asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortName" class="control-label"></label>
                    <input type="text" asp-for="ShortName" class="form-control" />
                    <span asp-validation-for="ShortName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

}
<div>
    <a asp-action="Index" class="btn btn-info mt-2"> <i class="fa fa-arrow-circle-left"></i>Back to List</a>
</div>